<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Perl-Magpie.org - Dashboard</title>
		<link href="/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link href="/css/dist.css" rel="stylesheet">
	</head>
	<body class="">
		{$debug_output}

		<h1 class="border-bottom mx-0 px-3 magpie_header pb-2 mb-3">Perl-Magpie Dashboard</h1>

		<div class="container-lg">
			<h3>Last hour</h3>
			<table class="w-100 table table-striped table-hover border table-sm">
				<thead class="table-success">
				<tr>
					<th>Package</th>
					<th>Test Results</th>
				</tr>
				</thead>
				{foreach $last_hour as $x}
				<tr>
					<td class="w-75">
						<a class="text-decoration-none" title="Show results" href="dist.php?dist={$x.distribution|dist_to_human}">
							{$x.distribution|dist_to_human}
						</a>
					</td>
					<td class="w-25">{$x.count}</td>
				</tr>
				{/foreach}
			</table>

			<h3>Last day</h3>
			<table class="w-100 table table-striped table-hover border table-sm">
				<thead class="table-success">
					<tr>
						<th>Package</th>
						<th>Test Results</th>
					</tr>
				</thead>
				{foreach $last_day as $x}
				<tr>
					<td class="w-75">
						<a class="text-decoration-none" title="Show results" href="dist.php?dist={$x.distribution|dist_to_human}">
							{$x.distribution|dist_to_human}
						</a>
					</td>
					<td class="w-25">{$x.count}</td>
				</tr>
				{/foreach}
			</table>

			<h3>
				Statistics
			</h3>
			<table class="table table-sm">
				<thead>
					<tr class="table-success fw-bold">
						<td>Hour</td>
						<td>Day</td>
						<td>Week</td>
						<td>Month</td>
						<td>Total</td>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>{$count_hour|number_format}</td>
						<td>{$count_day|number_format}</td>
						<td>{$count_week|number_format}</td>
						<td>{$count_month|number_format}</td>
						<td>{$count_total|number_format}</td>
					</tr>
				<tbody>
			</table>

